<div class='book'>
  <img class='img-rectangle' src='{{image}}' alt='{{name}}' />
  <h2>{{name}}</h2>
  <div>Author: {{author}}</div>
  <div>Publication date: {{publication}}</div>
  <div>Subjects:
    {{#each subjects}}
      <a href='/subjects/{{this}}'>{{this}}</a>
    {{/each}}
  </div>
  <!-- <a href='/books/{{id}}/edit'>Edit</a> -->
</div>